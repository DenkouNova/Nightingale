<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                  assembly="Nightingale"
                  namespace="Nightingale.Domain">

  <class name="Source" table="Source">
    <id name="Id">
      <generator class="increment" />
    </id>
    <property name="Name" />
    <property name="Disabled" />
    <many-to-one name="Subcategory" class="Subcategory" column="Subcategory_Id"/>
    <set name="Subsources" cascade="all">
      <key>
        <column name="Source_Id"/>
      </key>
      <one-to-many class="Subsource"/>
    </set>
  </class>

</hibernate-mapping>